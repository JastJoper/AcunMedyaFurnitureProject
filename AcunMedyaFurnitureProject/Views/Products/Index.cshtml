@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<!-- Start Hero Section -->
<style>
    .hero {
        background: url('~/furni-1.0.0/images/hero-bg.jpg') no-repeat center center;
        background-size: cover;
        padding: 100px 0;
        color: #fff;
        text-align: left;
    }

        .hero .intro-excerpt h1 {
            font-size: 48px;
            font-weight: bold;
            margin-bottom: 20px;
        }

    .product-section {
        padding: 50px 0;
        background-color: #f7f7f7;
    }

    .product-item {
        background: #fff;
        border: 1px solid #eaeaea;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
        text-decoration: none;
        color: #333;
    }

        .product-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

    .product-thumbnail {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 15px;
    }

    .product-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
        color: #333;
    }

    .product-price {
        font-size: 16px;
        color: #007bff;
        font-weight: bold;
    }

    .icon-cross img {
        width: 20px;
        height: auto;
    }
</style>

<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Tüm Ürünler</h1>
                </div>
            </div>
            <div class="col-lg-7">
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->

<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-4 col-lg-3 mb-5">
                    <a class="product-item" href="#">
                        <img src="@item.ImageUrl" class="img-fluid product-thumbnail" alt="@item.ProductName">
                        <h3 class="product-title">@item.ProductName</h3>
                        <strong class="product-price">@item.Price ₺</strong>
                        <span class="icon-cross">
                            <img src="~/furni-1.0.0/images/cross.svg" class="img-fluid" alt="cross">
                        </span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
